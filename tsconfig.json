{
  "compilerOptions": {
    "strict": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "allowJs": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
